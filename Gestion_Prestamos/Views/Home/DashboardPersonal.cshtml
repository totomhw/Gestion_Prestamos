<div class="admin-menu">
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Elementos" asp-action="Index">Elementos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Elementos" asp-action="Main">Elementos info</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Reportes" asp-action="PrestamosReporte">Reportes</a>
